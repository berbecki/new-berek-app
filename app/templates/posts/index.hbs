{{head-title 'Blog'}}
<h3>Blog</h3>
<hr>
{{outlet}}
<ul class="list-unstyled">
{{#each model as |posts|}}
 <li>
   <h4>{{#link-to 'posts.post' posts.slug}}{{posts.title}}{{/link-to}}</h4>
   <small>{{posts.created_at}}</small>
   <div class="clearfix">
     {{{posts.intro}}}
   </div>
   <hr>
 </li>
{{/each}}
</ul>
